@page
@model ModuleManager.Pages.LearningContents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LearningContent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LearningContent.Name" class="control-label"></label>
                <input asp-for="LearningContent.Name" class="form-control" />
                <span asp-validation-for="LearningContent.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningContent.ModuleId" class="control-label">Referenced Module</label>
                @Html.DropDownListFor(m => m.LearningContent.ModuleId, Model.Modules,"Select a Module",
                    new {
                      @class = "form-control selectpicker",
                      data_width = "auto",
                      data_live_search = "true",
                    //data_show_subtext = "true",
                })
                <span asp-validation-for="LearningContent.ModuleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningContent.TemplateId" class="control-label">Source Template</label>
                @Html.DropDownListFor(m => m.LearningContent.TemplateId, Model.Templates,"Select a Template",
                    new {
                      @class = "form-control selectpicker",
                      data_width = "auto",
                      data_live_search = "true",
                    //data_show_subtext = "true",
                })
                <span asp-validation-for="LearningContent.TemplateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
