@model ModuleManager.Pages.Templates.DetailsModel

@{
    ViewData["Title"] = "Details";
    var stat = Model.Template.ReleaseStatus;
}

<h1>Details</h1>

<div>
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Name)
        </dd>
    </dl>
</div>

@if ((int)Model.Template.ReleaseStatus <2)
{
    @if (User.IsInRole("ModuleAdministrators"))
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Template.TemplateId" />
            <input type="hidden" name="status" value="@ReleaseStatus.Active" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

@if ((int)Model.Template.ReleaseStatus >0)
{
    @if (User.IsInRole("ModuleAdministrators"))
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Template.TemplateId" />
            <input type="hidden" name="status" value="@ReleaseStatus.Inactive" />
            <button type="submit" class="btn btn-xs btn-danger">Reject</button>
        </form>
    }
}

<div class="row">    
    <div class="col-md-12">
