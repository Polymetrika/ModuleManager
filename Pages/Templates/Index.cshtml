@page
@model ModuleManager.Pages.Templates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Template Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Template[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Template) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TemplateID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TemplateID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TemplateID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
