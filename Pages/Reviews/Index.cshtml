@page
@model ModuleManager.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Review Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].TemplateId)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Review[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Review) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemplateId)
            </td>
                           <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(
                     User, item,
                     ModuleOperations.Update)).Succeeded)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ReviewId">Edit</a>
                        <text> | </text>
                    }

                    <a asp-page="./Details" asp-route-id="@item.ReviewId">Details</a>

                    @if ((await AuthorizationService.AuthorizeAsync(
                     User, item,
                     ModuleOperations.Delete)).Succeeded)
                    {
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.ReviewId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

