@page
@model ModuleManager.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel='stylesheet' href='https://cdn.form.io/formiojs/formio.full.min.css'>

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="flex-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ReviewId" />
            <div class="form-group">
                <label asp-for="Review.Name" class="control-label"></label>
                <input asp-for="Review.Name" class="form-control" />
                <span asp-validation-for="Review.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Review.Details" class="control-label"></label>
                <div id='formio'></div>
                <input asp-for="Review.Details" class="hidden" />
                <span asp-validation-for="Review.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src='https://unpkg.com/formiojs@4.14.0/dist/formio.full.min.js'></script>
    @*<script src='https://cdn.form.io/formiojs/formio.full.min.js'></script>*@
    <script type='text/javascript'>
      window.onload = function() {
        Formio.createForm(document.getElementById('formio'), @Html.Raw(Model.Template)).then((form) => {
          let modeldata=JSON.parse('@Html.Raw(Model.Review.Details)'||'{}');
          form.submission = {
            data:  modeldata
          };
          // Register for the submit event to get the completed submission.
          form.on('submit', function(submission) {
              $("#Module_Details").val(JSON.stringify(submission));
          });
  
          // Everytime the form changes, this will fire.
          form.on('change', function(changed) {
              $("#Module_Details").val(JSON.stringify(submission));
          });
        });
      }
    </script>
}